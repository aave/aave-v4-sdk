{
  "name": "aave-sdk",
  "version": "0.0.0",
  "description": "The quickest way to build on Aave Protocol",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=22",
    "pnpm": ">=9.15.4"
  },
  "scripts": {
    "build": "turbo build",
    "clean": "rimraf .turbo packages/*/dist",
    "check:graphql": "pnpm --filter graphql-next check",
    "dev": "turbo watch build",
    "lint:fix": "biome check --write",
    "lint": "biome check",
    "new:package": "NODE_OPTIONS='--import tsx' plop --plopfile=plopfile.ts",
    "prepublishOnly": "pnpm run build",
    "publish:results": "tsx scripts/publishResults.ts",
    "release": "pnpm changeset publish",
    "spec": "vitest --project spec",
    "test:aave-2151": "vitest --run --project spec packages/spec/borrow/multipleBorrows.spec.ts",
    "test:client": "vitest --project client",
    "test:react": "vitest --project react",
    "test:react:viem": "vitest --project react packages/react/src/viem.test.ts",
    "test:types": "vitest --project types",
    "test": "pnpm test:types && pnpm test:client && pnpm test:react"
  },
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@changesets/cli": "^2.29.5",
    "@types/node": "^24.0.7",
    "@vitest/ui": "^3.2.4",
    "jest-extended": "^6.0.0",
    "plop": "^4.0.1",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "turbo": "^2.5.4",
    "typescript": "^5.9.2",
    "vite": "^7.0.0",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "react": "^19.1.0",
      "react-dom": "^19.1.0"
    }
  },
  "packageManager": "pnpm@9.15.4"
}
