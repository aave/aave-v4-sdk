{
  // This root tsconfig is solely used for IDE support, it is not used for building the project.
  // See the tsconfig.build.json file for the actual build configuration of each package.
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "skipLibCheck": true, // Important for ambient types (e.g., vite-env.d.ts) to work
    "types": ["node"],
    "paths": {
      "@aave/core-next": ["./packages/core/src"],
      "@aave/client-next": ["./packages/client/src"],
      "@aave/client-next/actions": ["./packages/client/src/actions"],
      "@aave/client-next/ethers": ["./packages/client/src/ethers"],
      "@aave/client-next/privy": ["./packages/client/src/privy"],
      "@aave/client-next/test-utils": ["./packages/client/src/test-utils"],
      "@aave/client-next/viem": ["./packages/client/src/viem"],
      "@aave/graphql-next": ["./packages/graphql/src"],
      "@aave/types-next": ["./packages/types/src"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["dist", "node_modules", "examples", "templates"]
}
