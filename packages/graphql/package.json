{
  "name": "@aave/graphql",
  "version": "1.0.0-next.10",
  "description": "GraphQL bindings for the Aave API",
  "repository": {
    "directory": "packages/graphql",
    "type": "git",
    "url": "git://github.com/aave/aave-v4-sdk.git"
  },
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "import": "./dist/schema.js",
      "require": "./dist/schema.cjs"
    },
    "./testing": {
      "default": "./dist/testing.js"
    }
  },
  "typesVersions": {
    "*": {
      "import": [
        "./dist/index.d.ts"
      ],
      "require": [
        "./dist/index.d.cts"
      ],
      "schema": [
        "./dist/schema.d.ts"
      ],
      "testing": [
        "./dist/testing.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "check": "gql.tada check",
    "doctor": "gql.tada doctor",
    "gql:generate:cache": "gql.tada generate turbo",
    "gql:download:local": "./scripts/fetch-schema.ts http://localhost:3007/graphql ./src/schema.json && gql-tada generate schema 'http://localhost:3007/graphql' --output './schema.graphql'",
    "gql:download:staging": "./scripts/fetch-schema.ts https://api.v4.staging.aave.com/graphql ./src/schema.json && gql-tada generate schema 'https://api.v4.staging.aave.com/graphql' --output './schema.graphql'",
    "gql:generate:introspection": "gql-tada generate output",
    "gql:turbo": "gql-tada turbo",
    "prebuild": "pnpm run gql:turbo"
  },
  "dependencies": {
    "@aave/types": "workspace:*",
    "gql.tada": "^1.8.13",
    "graphql": "^16.11.0",
    "type-fest": "^5.1.0"
  },
  "devDependencies": {
    "@urql/introspection": "^1.2.1",
    "tsup": "^8.5.1",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
