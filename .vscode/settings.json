{
  // Biome: Rust tabanlı ultra hızlı formatter ve linter
  "editor.defaultFormatter": "biomejs.biome",
  
  // TypeScript & React Optimizasyonu
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.biome": "explicit",
      "source.organizeImports.biome": "explicit"
    }
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.biome": "explicit",
      "source.organizeImports.biome": "explicit"
    }
  },

  // GraphQL - Şema doğruluğu için linter açık kalsın
  "[graphql]": {
    "editor.formatOnSave": true, // Kaydetme sırasında düzeltme kapalıydı, tutarlılık için açıldı
    "editor.suggest.insertMode": "replace"
  },

  // JSON - Config dosyaları için iyileştirme
  "[json]": {
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.suggest.insertMode": "replace",
    "editor.formatOnSave": true
  },

  // Proje bazlı TypeScript SDK güvenliği
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  
  // Gereksiz uzantıları devre dışı bırak (Performans)
  "extensions.ignoreRecommendations": true,
  "disabledExtensions": ["Orta.vscode-jest"],

  // Genel Editor İyileştirmeleri
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.linkedEditing": true // Tag değişimlerinde otomatik eşleşme
}
